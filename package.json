{
  "name": "@pascaliske/eslint-config",
  "description": "Shared ESLint config for TypeScript projects.",
  "version": "2.0.4",
  "license": "MIT",
  "author": {
    "name": "Pascal Iske",
    "email": "info@pascal-iske.de",
    "url": "https://pascal-iske.de"
  },
  "repository": {
    "url": "https://github.com/pascaliske/eslint-config.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/pascaliske/eslint-config/issues"
  },
  "keywords": [
    "eslint",
    "eslintrc",
    "eslintconfig",
    "config",
    "configuration"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "base.js",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "rollup --config rollup.config.ts",
    "watch": "rollup --config rollup.config.ts --watch",
    "test": "eslint --config .eslintrc.js src/**/*.ts",
    "format": "prettier --write \"**/*.{ts,md,json}\"",
    "version": "bump --yes package.json",
    "changelog": "standard-changelog"
  },
  "prettier": "@pascaliske/prettier-config",
  "dependencies": {
    "eslint-config-prettier": "^8.3.0"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.30.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@pascaliske/prettier-config": "^1.1.2",
    "@pascaliske/tsconfig": "^1.0.6",
    "@rstacruz/bump-cli": "^2.0.0",
    "@types/node": "^15.14.2",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.30.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "rollup": "^2.53.0",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "standard-changelog": "^2.0.27",
    "typescript": "^4.3.5"
  }
}
